{
  "name": "TNRPC Shutdown",
  "version": "1.1",
  "slug": "tnrpc_shutdown",
  "description": "Seimple way for remote windows shutdowns",
  "url": "https://home-assistant.io/addons/tnrpc_shutdown/",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "stdin": true,
  "host_network": true,
  "options": {
    "computers": [
      {
        "alias": "test-pc",
        "address": "192.168.178.1",
        "credentials": "user%password",
		"reboot": "-R",
		"message": "Herunterfahren",
		"time_to_execute": "4"
      }
    ]
  },
  "schema": {
    "computers": [
      {
        "alias": "match(^[\\w-]*$)",
        "address": "str",
        "credentials": "match(^[^%]*(?:%[^%]*)?$)",
		"reboot": "str",
		"message": "str",
		"time_to_execute": "float(0,9999999999)"
      }
    ]
  },
  "image": "homeassistant/{arch}-addon-rpc_shutdown"
}
